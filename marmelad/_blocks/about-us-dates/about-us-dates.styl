.about-us-dates
  padding-top: 50px
  padding-bottom: 70px
  overflow: hidden

  @media (max-width: 1279px)
    padding-bottom: 30px

  &__slider-dates
    overflow: visible
    margin-bottom: 40px

  &__item-date
    width: auto
    min-width: 70px

    &.swiper-slide-active
      & ^[0]
        &__date
          color: #101820

  &__date
    font-size: 32px
    color: #A39061
    font-weight: 600
    line-height: 1.1
    letter-spacing: 0.16px
    display: flex
    align-items: center
    transition: color 0.3s
    cursor: default
    user-select: none
    cursor: pointer

    @media (max-width: 959px)
      font-size: 28px

    @media (max-width: 374px)
      font-size: 26px

    &:after
      content: ''
      flex: 0 0 64px
      width: 64px
      max-width: 64px
      height: 2px
      background-color: #A39061
      margin-left: 65px

      @media (max-width: 959px)
        flex: 0 0 38px
        width: 38px
        max-width: 38px
        margin-left: 35px

  &__item
    &.swiper-slide-active
      & ^[0]
        &__info
          opacity: 1
          visibility: visible

        &__title-date, &__text
          transform: translateY(0)
          opacity: 1
          visibility: visible

  &__body
    display: flex

    @media (max-width: 959px)
      flex-direction: column

  &__info
    width: 100%
    opacity: 0
    visibility: hidden
    transition: opacity 0.5s
    margin-right: 45px
    padding-top: 30px
    border-top: 2px solid #101820

    @media (max-width: 1279px)
      padding-bottom: 30px

    @media (max-width: 959px)
      margin-right: 0

    @media (max-width: 479px)
      padding-top: 20px

  &__title-date
    font-size: 164px
    color: #101820
    font-weight: 600
    line-height: 1
    letter-spacing: -0.64px
    margin-bottom: 24px
    opacity: 0
    visibility: hidden
    transform: translateY(-75px)
    transition: opacity 0.5s, transform 0.5s

    @media (max-width: 1279px)
      font-size: 100px
      margin-bottom: 12px

    @media (max-width: 479px)
      font-size: 80px

    @media (max-width: 379px)
      font-size: 60px

  &__text
    font-size: 16px
    color: #101820
    font-weight: 400
    line-height: 1.3
    letter-spacing: 0.16px
    max-width: 480px
    opacity: 0
    visibility: hidden
    transform: translateY(75px)
    transition: opacity 0.5s, transform 0.5s

    @media (max-width: 959px)
      max-width: 100%

    p
      margin-top: 0
      margin-bottom: 20px

      @media (max-width: 767px)
        margin-bottom: 15px

  &__img
    margin-left: auto
    clip-path: polygon(0% 0%, 34% 0px, 40% 6%, 60% 6%, 66% 0px, 100% 0%, 100% 34%, 94% 40%, 94% 60%, 100% 66%, 100% 100%, 66% 100%, 62% 94%, 40% 94%, 34% 100%, 0px 100%, 0px 67%, 7% 60%, 7% 40%, 0px 34%)
    flex: 0 0 610px
    max-width: 610px
    width: 610px
    height: 610px

    @media (max-width: 1279px)
      flex: 0 0 456px
      max-width: 456px
      width: 456px
      height: 456px

    @media (max-width: 959px)
      margin-right: auto
      margin-bottom: 20px

    @media (max-width: 510px)
      flex: 0 0 320px
      max-width: 320px
      width: 320px
      height: 320px

    @media (max-width: 374px)
      flex: 0 0 260px
      max-width: 260px
      width: 260px
      height: 260px

    img
      width: 100%
      height: 100%
      object-fit: cover
      vertical-align: top