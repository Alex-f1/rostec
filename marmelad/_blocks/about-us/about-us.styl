.about-us
  color: #fff

  &__section
    min-height: 880px
    padding-top: 128px
    padding-bottom: 128px
    background-repeat: no-repeat
    background-position: 50% 100%
    background-size: cover

    @media (max-width: 1279px)
      padding-top: 60px
      padding-bottom: 60px
      min-height: auto

  &__title
    font-size: 64px
    color: #FFF
    font-weight: 700
    line-height: 1.1
    letter-spacing: -0.64px
    margin-top: 0
    margin-bottom: 64px

    @media (max-width: 1279px)
      font-size: 46px
      margin-bottom: 32px

    @media (max-width: 767px)
      font-size: 36px

  &__desc
    font-size: 48px
    color: #FFF
    font-weight: 600
    line-height: 1.1
    letter-spacing: 0.16px
    margin-bottom: 64px

    @media (max-width: 1279px)
      font-size: 38px
      margin-bottom: 32px

    @media (max-width: 767px)
      font-size: 32px

    @media (max-width: 479px)
      font-size: 24px

  &__text
    font-size: 20px
    color: #FFF
    font-weight: 400
    line-height: 1.3
    letter-spacing: 0.16px
    max-width: 660px
    width: 100%

    @media (max-width: 767px)
      font-size: 16px

    p
      margin-top: 0
