.activities-block
  padding-top: 80px
  padding-bottom: 100px

  @media (max-width: 1279px)
    padding-top: 40px
    padding-bottom: 50px

  &__head
    padding-bottom: 35px
    border-bottom: 2px solid #F0F4FA
    margin-bottom: 50px

  &__item
    margin-bottom: 100px

    &:last-child
      margin-bottom: 0

  &__content
    display: flex

    @media (max-width: 767px)
      display: block

  &__name
    font-size: 48px
    color: #101820
    font-weight: 600
    line-height: 1.1
    letter-spacing: 0.16px
    width: 50%
    margin-right: 30px

    @media (max-width: 767px)
      font-size: 36px
      width: 100%
      margin-right: 0
      margin-bottom: 15px

    @media (max-width: 479px)
      font-size: 32px

  &__text
    width: 50%

    @media (max-width: 767px)
      width: 100%

    h3
      font-size: 32px
      color: #101820
      font-weight: 400
      line-height: 1.2
      letter-spacing: 0.16px
      word-break: break-word
      margin-top: 0
      margin-bottom: 30px

      @media (max-width: 767px)
        font-size: 28px

      @media (max-width: 479px)
        font-size: 24px

    p
      font-size: 20px
      color: #101820
      font-weight: 400
      line-height: 1.2
      letter-spacing: 0.16px
      margin-top: 0
      margin-bottom: 30px

  &__img
    width: 100%
    height: 480px
    margin-top: 100px
    background-attachment: fixed
    background-repeat: no-repeat
    background-size: cover
    background-position: 50% 0

    @media (max-width: 767px)
      margin-top: 50px
      height: 280px

    img
      width: 100%
      height: 100%
      vertical-align: top
      object-fit: cover