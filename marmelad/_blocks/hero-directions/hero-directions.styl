.hero-directions
  height: 890px
  background: linear-gradient(161.48deg, #2c3642 44.8%, #111e2cbf 74.15%)
  transition: height .3s
  position relative

  @media (max-width: 1279px)
    height: auto

  &__section
    padding-top 140px
    padding-bottom 130px

    @media (max-width: 1279px)
      padding-top 70px
      padding-bottom 60px

  &__imgs-bg
    position absolute
    top 0
    left 0
    width 100%
    height 100%

    img
      position absolute
      top 0
      left 0
      width 100%
      height 100%
      vertical-align top
      object-fit: cover
      object-position 50% 0
      opacity 0
      visibility hidden
      transition: opacity 1s

      &._is-show
        opacity 1
        visibility visible

  &__container
    display flex
    position relative
    z-index 3

  &__links
    width: 645px  
    margin-right: 45px
    padding-top 75px
    border-top: 2px solid #F0F4FA

    @media (max-width: 1279px)
      border-top: 0
      padding-top 0

  &__title
    font-size: 64px
    color: #FFF 
    font-weight: 700
    line-height: 0.9
    letter-spacing: -0.64px
    margin-top 0
    margin-bottom 30px

    @media (max-width: 767px)
      font-size 36px
  
  &__list
    list-style: none
    padding-left 0
    margin 0
    max-width: 480px
    width 100%

    li
      
      @media (min-width: 1280px) and (max-width: 1439px)
        padding-left 36px

      a
        font-size: 32px
        color: #A39061
        font-weight: 600
        line-height: 1
        letter-spacing: 0.16px
        text-decoration none
        display block
        transition: color .3s
        padding-top 14px
        padding-bottom 14px
        position relative

        @media (max-width: 767px)
          font-size 24px

        &:before
          content: ''
          position absolute
          top 22px
          left -35px
          width 25px
          height 14px
          background-image: url("data:image/svg+xml,%3Csvg width='25' height='17' viewBox='0 0 25 17' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M2 6.5L10.4483 14.5L23.8965 1.5' stroke='%23F0F4FA' stroke-width='3'/%3E%3C/svg%3E%0A")
          background-repeat no-repeat
          background-position 0 0
          background-size contain
          opacity 0
          visibility hidden
          transition: opacity .3s

        span
          font-size: 16px
          color: #FFF
          font-weight: 400
          line-height: 1
          letter-spacing: 0.16px
          margin-top 5px
          display none

          @media (max-width: 1279px)
            display block

      &._is-active
        a
          color #f0f4fa  

          &:before
            opacity 1
            visibility visible

          span
            display block
        
  &__imgs
    clip-path: polygon(0% 0%, 34% 0px, 40% 6%, 60% 6%, 66% 0px, 100% 0%, 100% 34%, 94% 40%, 94% 60%, 100% 66%, 100% 100%, 66% 100%, 62% 94%, 40% 94%, 34% 100%, 0px 100%, 0px 67%, 7% 60%, 7% 40%, 0px 34%)
    flex: 0 0 610px
    max-width: 610px
    width: 610px
    height: 610px
    background: linear-gradient(161.48deg, #2c3642 44.8%, #111e2cbf 74.15%)
    position relative
    overflow hidden

    @media (max-width: 1279px)
      display none

    img
      width 100%
      height 100%
      vertical-align top
      object-fit: cover
      position absolute
      top 50%
      left 50%
      transform: translate(-50%, -50%)
      opacity 0
      visibility hidden

      &._is-show
        opacity 1
        visibility visible
        transform: translate(-50%, -50%) scale(1.3)  
        transition: transform 2.5s, opacity 1s
      