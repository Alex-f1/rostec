.hero
  width: 100%
  color: #fff
  padding-top: 40px
  position: relative
  z-index: 10

  @media (max-width: 767px)
    padding-top: 20px

  &__section
    width: 100%
    height: 100%
    overflow: hidden
    padding-right: 25px
    padding-left: 25px

  &__inner
    max-width: 1320px
    width: 100%
    min-height: 750px
    margin-left: auto
    margin-right: auto
    position: relative
    border-bottom: 2px solid #FFFFFF

    @media (max-width: 1279px)
      min-height: 600px

    @media (max-width: 767px)
      max-width: 456px
      min-height: 790px

    @media (max-width: 510px)
      max-width: 320px
      min-height: 680px

    @media (max-width: 374px)
      max-width: 280px
      min-height: 640px

  &__title
    font-size: 128px
    color: #FFF
    font-weight: 600
    line-height: 0.8
    letter-spacing: -0.64px
    max-width: 540px
    width: 100%
    position: absolute
    top: 0
    left: 0

    @media (max-width: 1279px)
      font-size: 80px
      line-height: 1

    @media (max-width: 1023px)
      font-size: 52px
      max-width: 350px

    @media (max-width: 767px)
      position: static
      margin-bottom: 25px

  &__wrapper
    .swiper-pagination
      bottom: 60px
      width: 100%
      display: flex
      justify-content: center
      align-items: center
      padding-right: 15px
      padding-left: 15px

      @media (max-width: 767px)
        bottom: 40px

    .swiper-pagination-bullet
      background-color: transparent
      border-radius: 4px
      flex: 0 0 48px
      width: 48px
      max-width: 48px
      margin-right: 4px
      overflow: hidden
      opacity: 1
      padding-top: 15px
      padding-bottom: 15px
      position: relative

      &:after
        content: ''
        position: absolute
        top: 50%
        left: 0
        transform: translateY(-50%)
        width: 100%
        height: 3px
        background-color: rgba(255, 255, 255, 0.5)

      &:last-child
        margin-right: 0

      span
        position: absolute
        top: 50%
        left: 0
        transform: translateY(-50%)
        display: block
        width: 0
        height: 3px
        background-color: #fff

      &.swiper-pagination-bullet-active
        span
          animation-name: paginationProgressBar
          animation-duration: 5s
          animation-timing-function: ease-in
          animation-iteration-count: 1
          animation-direction: alternate
          animation-fill-mode: forwards

  &__item
    &.swiper-slide-active
      & ^[0]
        &__info
          transform: translateY(0)
          opacity: 1
          visibility: visible

  &__body
    display: flex

    @media (max-width: 767px)
      flex-direction: column

  &__info
    max-width: 480px
    width: 100%
    align-self: flex-end
    padding-bottom: 60px
    transform: translateY(50px)
    opacity: 0
    visibility: hidden
    transition: opacity 0.5s, transform 0.5s
    margin-right: 20px

    @media (max-width: 1279px)
      padding-bottom: 30px

    @media (max-width: 767px)
      order: 1
      margin-right: auto
      margin-left: auto

  &__text
    font-size: 24px
    color: #FFFFFF
    font-weight: 400
    line-height: 1.1
    letter-spacing: 0.16px
    margin-bottom: 25px

    @media (max-width: 1279px)
      font-size: 20px

    @media (max-width: 1023px)
      font-size: 16px

    @media (max-width: 767px)
      margin-bottom: 15px

  &__more
    font-size: 14px
    color: #A39061
    font-weight: 600
    line-height: 1.1
    letter-spacing: 1.6px
    text-transform: uppercase
    text-decoration: none
    padding: 5px 0 6px 0
    border-bottom: 3px solid #A39061
    transition: border-color 0.3s

    @media (max-width: 1023px)
      font-size: 12px

    &:hover
      border-bottom-color: transparent

  &__img
    margin-left: auto
    clip-path: polygon(0% 0%, 34% 0px, 40% 6%, 60% 6%, 66% 0px, 100% 0%, 100% 34%, 94% 40%, 94% 60%, 100% 66%, 100% 100%, 66% 100%, 62% 94%, 40% 94%, 34% 100%, 0px 100%, 0px 67%, 7% 60%, 7% 40%, 0px 34%)
    flex: 0 0 610px
    max-width: 610px
    width: 610px
    height: 610px

    @media (max-width: 1279px)
      flex: 0 0 456px
      max-width: 456px
      width: 456px
      height: 456px

    @media (max-width: 767px)
      margin-right: auto
      margin-bottom: 20px

    @media (max-width: 510px)
      flex: 0 0 320px
      max-width: 320px
      width: 320px
      height: 320px

    @media (max-width: 374px)
      flex: 0 0 260px
      max-width: 260px
      width: 260px
      height: 260px

    img
      width: 100%
      height: 100%
      object-fit: cover
      vertical-align: top

  &__slider-name
    overflow: visible
    margin-top: -320px

    @media (max-width: 1279px)
      margin-top: -250px

    @media (max-width: 1023px)
      margin-top: -290px

    @media (max-width: 767px)
      margin-top: -370px
      padding-left: 70px

    @media (max-width: 510px)
      margin-top: -320px

    @media (max-width: 374px)
      margin-top: -300px

  &__item-name
    width: auto
    min-width: 150px

    &.swiper-slide-active
      & ^[0]
        &__name
          color: #fff

          @media (max-width: 767px)
            color: #A39061

  &__name
    font-size: 48px
    color: #A39061
    font-weight: 600
    line-height: 1.1
    letter-spacing: 0.16px
    display: flex
    align-items: center
    transition: color 0.3s
    cursor: default
    user-select: none

    @media (max-width: 767px)
      font-size: 28px
      color: #fff

    @media (max-width: 374px)
      font-size: 26px

    &:after
      content: ''
      flex: 0 0 64px
      width: 64px
      max-width: 64px
      height: 2px
      background-color: #A39061
      margin-left: 65px

      @media (max-width: 767px)
        flex: 0 0 38px
        width: 38px
        max-width: 38px
        margin-left: 35px

  @keyframes paginationProgressBar
    0%
      width: 0

    100%
      width: 100%