.main-menu
  margin-right: 50px

  &__nav
    ul
      list-style: none
      display: flex
      align-items: center
      padding-left: 0
      margin: 0

      li
        margin-right: 50px

        &:last-child
          margin-right: 0

        a
          font-size: 20px
          color: #FFF
          font-weight: 600
          line-height: 1.1
          letter-spacing: 0.16px
          text-decoration: none
          transition: color 0.3s

          &:hover
            color: #a39061