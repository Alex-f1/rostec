.main-menu
  margin-right: 48px

  @media (max-width: 1279px)
    margin-right: 35px

  @media (max-width: 1023px)
    display: none

  &__nav
    ul
      list-style: none
      display: flex
      align-items: center
      padding-left: 0
      margin: 0

      li
        margin-right: 48px

        @media (max-width: 1279px)
          margin-right: 25px

        &:last-child
          margin-right: 0

        a
          font-size: 16px
          color: #FFF
          font-weight: 600
          line-height: 1.1
          letter-spacing: 0.16px
          text-decoration: none
          transition: color 0.3s

          &:hover
            color: #a39061