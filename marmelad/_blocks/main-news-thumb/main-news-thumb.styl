.main-news-thumb
  color: #fff
  max-width: 305px
  min-height: 510px
  overflow: hidden
  position: relative

  &:hover
    & ^[0]
      &__date
        &:after
          width: 100%

      &__text
        margin-top: 0
        margin-bottom: 30px
        opacity: 1
        visibility: visible

      &__more
        background: transparent

        &:after
          opacity: 1
          left: 10px
          visibility: visible

    &:after
      opacity: 1

  &:after
    content: ''
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%
    background-color: rgba(16, 24, 32, 0.8)
    backdrop-filter: blur(12px)
    z-index: -1
    opacity: 0
    transition: opacity 0.5s, ease 0.5s

  &__body
    width: 100%
    height: 100%
    padding: 20px 15px

  &__img
    position: absolute
    top: 0
    left: 0
    width: 100%
    height: 100%
    z-index: -2

    img
      width: 100%
      height: 100%
      object-fit: cover
      vertical-align: top

  &__date
    display: flex
    align-items: center
    justify-content: space-between
    padding-bottom: 10px
    margin-bottom: 32px
    position: relative

    &:after
      content: ''
      width: 0
      height: 2px
      background-color: #A39061
      position: absolute
      bottom: 0
      left: 0
      transition: width 0.3s, ease 0.3s

  &__name
    font-size: 20px
    color: #FFF
    font-weight: 400
    line-height: 1.1
    letter-spacing: 0.16px
    text-decoration: none
    transition: color 0.3s
    display: block
    margin-bottom: 30px
    transition: color 0.3s

    &:hover
      color: #a39061

  &__text
    font-size: 16px
    color: #FFF
    font-weight: 400
    line-height: 1.1
    letter-spacing: 0.16px
    opacity: 0
    visibility: hidden
    margin-top: -15px
    margin-bottom: -50px
    transition: margin 0.5s, opacity 0.5s, ease 0.4s

  &__tags
    display: flex
    flex-wrap: wrap

  &__tag
    font-size: 12px
    color: #FFF
    font-weight: 600
    line-height: 1.1
    letter-spacing: 1.6px
    text-transform: uppercase
    text-decoration: none
    margin-right: 15px
    margin-bottom: 10px
    transition: color 0.3s

    &:hover
      color: #a39061

    &:last-child
      margin-right: 0

  &__more
    position: absolute
    bottom: 15px
    right: 15px
    width: 48px
    height: 48px
    background-image: url("data:image/svg+xml,%3Csvg width='48' height='48' viewBox='0 0 48 48' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M8.5 24H40.5' stroke='white' stroke-width='3'/%3E%3Cpath d='M24.5 8L24.5 40' stroke='white' stroke-width='3'/%3E%3C/svg%3E%0A")
    background-repeat: no-repeat
    background-position: 50% 50%
    background-size: 48px 48px
    z-index: 2
    transition: background 0.3s, ease 0.3s

    &:after
      content: ''
      position: absolute
      top: 6px
      left: 10px
      width: 34px
      height: 34px
      background-size: 34px 34px
      background-image: url("data:image/svg+xml,%3Csvg width='34' height='34' viewBox='0 0 34 34' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M32.0659 17.9402L15.7426 1.61694' stroke='%23A39061' stroke-width='3'/%3E%3Cpath d='M15.7419 32.3965L32.0652 16.0732' stroke='%23A39061' stroke-width='3'/%3E%3C/svg%3E%0A")
      background-repeat: no-repeat
      background-position: 0 0
      opacity: 0
      visibility: hidden
      transition: opacity 0.3s, left 0.3s, ease 0.3s