.multimedia-block
  background-color: #FAFCFF

  &__section
    padding-top: 128px
    padding-bottom: 100px

    @media (max-width: 767px)
      padding-top: 65px
      padding-bottom: 50px

  &__head
    display: flex
    align-items: center
    justify-content: space-between
    margin-bottom: 48px

    h3
      font-size: 48px
      color: #101820
      font-weight: 600
      line-height: 1.1
      letter-spacing: -0.16px
      margin: 0
      max-width: 740px
      width: 100%

      @media (max-width: 767px)
        font-size: 24px

      @media (max-width: 374px)
        font-size: 20px

  &__all
    font-size: 14px
    color: #A39061
    font-weight: 600
    line-height: 1.1
    letter-spacing: 1.6px
    text-transform: uppercase
    text-decoration: none
    padding: 5px 0
    border-bottom: 3px solid #A39061
    transition: color 0.3s, border-color 0.3s

    @media (max-width: 1279px)
      display: none

    &:hover
      color: #101820
      border-bottom-color: #101820

  &__items
    display: flex
    flex-wrap: wrap
    margin-left: -30px

  &__item
    width: 33.333%
    padding-left: 30px
    padding-bottom: 30px

    @media (max-width: 959px)
      width: 50%

    @media (max-width: 639px)
      width: 100%

    .multimedia-thumb
      max-width: 100%