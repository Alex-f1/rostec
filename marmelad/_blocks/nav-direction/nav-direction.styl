.nav-direction
  flex: none
  width: 100%
  position: relative
  z-index: 5
  transition: transform 0.3s, background-color 0.3s, ease 0.3s

  // &--long
  // & ^[0]
  // &__nav
  // @media (min-width: 1280px)
  // position: absolute
  // top: -2px
  // right: 0

  // @media (min-width: 1440px)
  // padding-right: 25px

  // ul
  // li
  // margin-right: 45px

  // @media (max-width: 1439px)
  // margin-right: 25px
  &._is-fixed
    top: 0
    left: 0
    position: fixed
    background-color: #fff
    box-shadow: -10px 0px 24px rgba(16, 24, 32, 0.1)

  .direction-name
    flex: 0 0 auto
    padding-top: 20px
    padding-bottom: 20px
    margin-right: 30px
    width: auto
    background-color: transparent

    @media (max-width: 767px)
      margin-right: 15px

    &:hover
      h3
        color: #a39061

      h3 + .direction-name__other
        background-image: url("data:image/svg+xml,%3Csvg width='20' height='30' viewBox='0 0 21 30' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M2 12L10.5 3L19 12' stroke='%23A39061' stroke-width='3'/%3E%3Cpath d='M2 19L10.5 27L19 19' stroke='%23A39061' stroke-width='3'/%3E%3C/svg%3E%0A")

    &--news
      pointer-events: none

    &__other
      order: -1

    &__list
      top: 125px
      z-index: 5

      @media (max-width: 767px)
        top: 110px

  &__inner
    display: flex
    align-items: center

    @media (max-width: 767px)
      display: block

  &__nav
    margin-left: auto
    display: flex
    width: 100%

    // overflow-x: auto
    @media (min-width: 768px)
      margin-left: auto

    ul
      list-style: none
      display: flex
      align-items: center
      margin: 0
      padding-left: 0
      width: 100%

      @media (min-width: 768px)
        justify-content: flex-end

      li
        margin-right: 50px
        flex: 0 0 auto

        // @media (max-width: 1279px)
        // margin-right: 25px
        @media (max-width: 767px)
          margin-right: 15px

        &:last-child
          margin-right: 0

        // &:nth-last-child(2)
        // margin-right: 30px
        &._is-active
          a
            color: #101820
            pointer-events: none

            &:after
              opacity: 1
              visibility: visible

        a
          font-size: 14px
          color: #A39061
          font-weight: 600
          line-height: 1.1
          letter-spacing: 1.6px
          text-transform: uppercase
          text-decoration: none
          padding-top: 40px
          padding-bottom: 40px
          position: relative
          display: block
          transition: color 0.3s

          @media (max-width: 767px)
            padding-top: 20px
            padding-bottom: 20px
            // padding-top: 30px
            // padding-bottom: 30px

          &:after
            content: ''
            position: absolute
            bottom: 0
            left: 0
            width: 100%
            height: 3px
            background-color: #101820
            opacity: 0
            visibility: hidden
            transition: opacity 0.3s

          &:hover
            color: #101820

  &__nav-last
    position: relative
    cursor: pointer
    margin-right: 0 !important
    padding: 16px
    width: 89px
    height: 46px
    transition: background-color 0.3s
    display: flex
    align-items: center
    justify-content: center
    margin-left: -25px

    @media (max-width: 767px)
      margin-left: -15px

    &:first-child
      margin-left: 0
      // ul
      // left: 0 !important

    &._is-active-last
      background-color: #F5F8FA

      &:before
        color: #101820

      &:after
        background-image: url("data:image/svg+xml,%3Csvg width='12' height='8' viewBox='0 0 12 8' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M1 1L6 6L11 1' stroke='%23101820' stroke-width='2'/%3E%3C/svg%3E%0A")

      ul
        opacity: 1
        visibility: visible

    &:before
      content: attr(data-text-nav-more)
      font-size: 14px
      color: #A39061
      font-weight: 600
      line-height: 14px
      letter-spacing: 1.6px
      text-transform: uppercase
      width: 100%
      transition: color 0.3s
      display: block

    &:after
      content: ''
      position: absolute
      top: 18px
      right: 16px
      width: 12px
      height: 8px
      background-image: url("data:image/svg+xml,%3Csvg width='12' height='8' viewBox='0 0 12 8' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M1 1L6 6L11 1' stroke='%23A39061' stroke-width='2'/%3E%3C/svg%3E%0A")
      background-repeat: no-repeat
      background-position: 0 0
      background-size: contain
      transition: background 0.3s

    ul
      list-style: none
      background-color: #fff
      position: absolute
      right: 0
      top: 100%
      max-width: 260px
      width: auto !important
      flex-direction: column
      align-items: flex-start
      border-radius: 0 0 4px 4px
      z-index: 10
      opacity: 0
      visibility: hidden
      transition: opacity 0.3s, ease 0.3s

      li
        margin-right: 0
        flex: none
        width: 100%
        border-top: 1px solid rgba(143, 143, 140, 0.2)

        &:first-child
          border-top: 0

        a
          line-height: 1
          display: block
          padding: 16px !important
          background-color: #F5F8FA

          &:hover
            border-color: transparent