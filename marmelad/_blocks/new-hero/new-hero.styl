.new-hero
  width: 100%
  height: 1045px
  // max-height: 1045px
  color: #fff
  // padding-top: 40px
  position: relative
  z-index: 10
  margin-top: -106px
  background-color: #8F8F8C

  &--bottom-over
    margin-bottom: -460px

  &__section
    width: 100%
    height: 100%
    overflow: hidden
    // padding-right: 25px
    // padding-left: 25px
    position: relative

  &__inner
    // max-width: 1320px
    width: 100%
    // min-height: 750px
    height: 100%
    margin-left: auto
    margin-right: auto
    // position: relative
    border-bottom: 2px solid #030303

  &__title-wrapper
    width: 100%
    position: absolute
    top: 156px
    left: 0
    z-index: 5

    @media (max-width: 767px)
      top: 116px

  &__title
    font-size: 88px
    color: #FFF
    font-weight: 600
    line-height: 1
    letter-spacing: -0.64px

    @media (max-width: 1279px)
      padding-right: 15px
      padding-left: 15px
      line-height: 1

    @media (max-width: 767px)
      font-size: 56px
      position: static
      margin-bottom: 25px
      max-width: 360px
      margin-left: 0

    @media (min-width: 768px) and (max-width: 959px)
      letter-spacing: -2.8px

  &__wrapper
    height: 100%

    .swiper-pagination
      bottom: 60px
      width: 100%
      display: flex
      justify-content: center
      align-items: center
      padding-right: 15px
      padding-left: 15px

      @media (max-width: 767px)
        bottom: 40px

    .swiper-pagination-bullet
      background-color: transparent
      border-radius: 4px
      flex: 0 0 48px
      width: 48px
      max-width: 48px
      margin-right: 4px
      overflow: hidden
      opacity: 1
      padding-top: 15px
      padding-bottom: 15px
      position: relative

      &:after
        content: ''
        position: absolute
        top: 50%
        left: 0
        transform: translateY(-50%)
        width: 100%
        height: 3px
        background-color: rgba(255, 255, 255, 0.5)

      &:last-child
        margin-right: 0

      span
        position: absolute
        top: 50%
        left: 0
        transform: translateY(-50%)
        display: block
        width: 0
        height: 3px
        background-color: #fff

      &.swiper-pagination-bullet-active
        span
          animation-name: paginationProgressBar
          animation-duration: 5s
          animation-timing-function: ease-in
          animation-iteration-count: 1
          animation-direction: alternate
          animation-fill-mode: forwards

  &__slider
    height: 100%

  &__item
    &.swiper-slide-active
      & ^[0]
        &__info
          transform: translateY(0)
          opacity: 1
          visibility: visible

  &__body
    display: flex
    height: 100%

  &__info
    max-width: 480px
    width: 100%
    align-self: center
    padding-bottom: 200px
    transform: translateY(50px)
    opacity: 0
    visibility: hidden
    transition: opacity 0.5s, transform 0.5s
    margin-right: 20px
    position: relative
    z-index: 5

    @media (max-width: 767px)
      padding-bottom: 240px

  &__text
    font-size: 24px
    color: #FFFFFF
    font-weight: 400
    line-height: 1.1
    letter-spacing: 0.16px
    margin-bottom: 25px

    @media (max-width: 1279px)
      font-size: 20px

    @media (max-width: 1023px)
      font-size: 16px

    @media (max-width: 767px)
      margin-bottom: 15px

  &__more
    font-size: 14px
    color: #A39061
    font-weight: 600
    line-height: 1.1
    letter-spacing: 1.6px
    text-transform: uppercase
    text-decoration: none
    padding: 5px 0 6px 0
    margin-top: 25px
    display: inline-block

    // border-bottom: 3px solid #A39061
    // transition: border-color 0.3s
    @media (max-width: 1023px)
      font-size: 12px

  &__img
    margin-left: auto
    // clip-path: polygon(0% 0%, 34% 0px, 40% 6%, 60% 6%, 66% 0px, 100% 0%, 100% 34%, 94% 40%, 94% 60%, 100% 66%, 100% 100%, 66% 100%, 62% 94%, 40% 94%, 34% 100%, 0px 100%, 0px 67%, 7% 60%, 7% 40%, 0px 34%)
    // flex: 0 0 610px
    // max-width: 610px
    // width: 610px
    // height: 610px
    position: fixed
    top: 0
    left: 0
    width: 100%
    height: 100%

    img
      width: 100%
      height: 100%
      object-fit: cover
      vertical-align: top

    &:before
      content: ''
      width: 100%
      height: 100%
      position: absolute
      top: 0
      left: 0
      background: radial-gradient(47.59% 84.7% at 63.28% 53.89%, rgba(16, 24, 32, 0) 37.5%, rgba(16, 24, 32, 0.6) 84.28%)
      z-index: 1

  &__slider-name
    overflow: visible
    margin-top: -770px
    position: relative
    z-index: 10

  &__item-name
    width: auto
    min-width: 150px

    &.swiper-slide-active
      & ^[0]
        &__name
          color: #fff

          span
            &:before
              animation-name: paginationProgressBar
              animation-duration: 5s
              animation-timing-function: ease-in
              animation-iteration-count: 1
              animation-direction: alternate
              animation-fill-mode: forwards

  &__name
    font-size: 32px
    color: #8F8F8C
    font-weight: 600
    line-height: 1.1
    letter-spacing: 0.16px
    display: flex
    align-items: center
    transition: color 0.3s
    cursor: default
    user-select: none

    @media (max-width: 767px)
      font-size: 28px

    @media (max-width: 374px)
      font-size: 26px

    span
      flex: 0 0 64px
      width: 64px
      max-width: 64px
      height: 2px
      background-color: #8F8F8C
      margin-left: 65px
      position: relative

      @media (max-width: 767px)
        flex: 0 0 38px
        width: 38px
        max-width: 38px
        margin-left: 35px

      &:before
        content: ''
        position: absolute
        top: 0
        left: 0
        width: 0
        height: 2px
        background-color: #fff

  &__bg-fill
    width: 100%
    height: 465px
    position: absolute
    bottom: 0
    left: 0
    background: rgba(16, 24, 32, 0.01)
    opacity: 0.99
    backdrop-filter: blur(37px)
    z-index: 3

  @keyframes paginationProgressBar
    0%
      width: 0

    100%
      width: 100%