.news-thumb
  max-width: 416px
  width: 100%

  @media (max-width: 639px)
    padding-bottom: 35px
    border-bottom: 2px solid rgba(141, 141, 139, 0.1)

  &__body
    width: 100%
    display: flex
    flex-direction: column

  &__info
    display: flex
    align-items: center

  &__date
    font-size: 12px
    color: #101820
    font-weight: 600
    line-height: 1.1
    letter-spacing: 1.6px
    text-transform: uppercase
    margin-right: 32px
    margin-bottom: 15px

    @media (max-width: 639px)
      margin-bottom: 8px

  &__tags
    display: flex
    align-items: center
    flex-wrap: wrap

  &__tag
    font-size: 12px
    color: #101820
    font-weight: 600
    line-height: 1.1
    letter-spacing: 1.6px
    text-transform: uppercase
    text-decoration: none
    margin-right: 15px
    margin-bottom: 15px
    transition: color 0.3s

    @media (max-width: 639px)
      margin-bottom: 8px

    &:hover
      color: #a39061

    &:last-child
      margin-right: 0

  &__img
    display: block
    overflow: hidden
    height: 380px
    margin-bottom: 15px

    @media (max-width: 1279px)
      height: 280px

    @media (max-width: 639px)
      height: 180px
      order: 1
      margin-bottom: 0

    &:hover
      img
        transform: scale(1.2)

    img
      width: 100%
      height: 100%
      vertical-align: top
      object-fit: cover
      transition: transform 1s, ease 1s

  &__text
    font-size: 24px
    color: #000
    font-weight: 400
    line-height: 1.1
    letter-spacing: 0.16px
    text-decoration: none
    transition: color 0.3s
    margin-bottom: 16px

    @media (max-width: 639px)
      margin-bottom: 8px

    &:hover
      color: #a39061