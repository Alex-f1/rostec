.project-thumb
  width: 100%

  &__body
    width: 100%

  &__img
    display: block
    height: 368px
    overflow: hidden
    margin-bottom: 30px

    @media (max-width: 767px)
      height: 280px

    img
      vertical-align: top

    &:hover
      img
        transform: scale(1.2)

    img
      width: 100%
      height: 100%
      vertical-align: top
      object-fit: cover
      transition: transform 1s, ease 1s

  &__content
    max-width: 530px
    width: 100%

  &__name
    font-size: 32px
    color: #A39061
    font-weight: 400
    line-height: 1.1
    letter-spacing: 0.16px
    text-decoration: none
    display: block
    margin-bottom: 30px
    transition: color 0.3s

    @media (max-width: 1023px)
      font-size: 28px

    @media (max-width: 767px)
      font-size: 18px

    &:hover
      color: #101820

  &__text
    font-size: 16px
    color: #101820
    font-weight: 400
    line-height: 1.1
    letter-spacing: 0.16px
    margin-bottom: 30px

  &__tags
    display: flex
    align-items: center
    flex-wrap: wrap

  &__tag
    font-size: 12px
    color: #101820
    font-weight: 600
    line-height: 1.1
    letter-spacing: 1.6px
    text-transform: uppercase
    text-decoration: none
    margin-right: 15px
    margin-bottom: 15px
    transition: color 0.3s

    @media (max-width: 639px)
      margin-bottom: 8px

    &:hover
      color: #a39061

    &:last-child
      margin-right: 0