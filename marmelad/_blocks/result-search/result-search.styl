.result-search
  padding-top: 64px
  background-color: #FAFCFF

  @media (max-width: 1279px)
    padding-top: 30px

  &__head
    padding-bottom: 30px
    margin-bottom: 30px
    border-bottom: 2px solid #101820

    @media (max-width: 959px)
      padding-bottom: 15px
      margin-bottom: 15px

  &__title
    font-size: 64px
    color: #101820
    font-weight: 700
    line-height: 1.1
    letter-spacing: -0.64px
    margin-top: 0
    margin-bottom: 0

    @media (max-width: 1279px)
      font-size: 48px

    @media (max-width: 959px)
      font-size: 36px

    @media (max-width: 767px)
      font-size: 28px

    span
      color: #a39061
      white-space: nowrap

  &__button-clear
    width: 24px
    height: 24px
    display: inline-block
    vertical-align: middle
    background-color: transparent
    border: none
    padding: 0
    background-image: url("data:image/svg+xml,%3Csvg width='24' height='24' viewBox='0 0 24 24' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M5.63672 18.364L18.3646 5.63609' stroke='%23101820' stroke-width='3'/%3E%3Cpath d='M5.63672 5.63599L18.3646 18.3639' stroke='%23101820' stroke-width='3'/%3E%3C/svg%3E%0A")
    background-repeat: no-repeat
    background-position: 0 0
    background-size: contain
    cursor: pointer

  &__items
    @media (min-width: 1440px)
      margin-left: -20px

  &__item
    margin-bottom: 30px

  &__body
    display: flex

  &__number
    font-size: 12px
    color: #101820
    font-weight: 600
    line-height: 1
    letter-spacing: 1.6px
    text-transform: uppercase
    margin-right: 8px
    align-self: flex-start
    padding-top: 10px
    flex: 0 0 auto
    min-width: 10px

  &__content
    display: flex
    flex-direction: column
    max-width: 1250px
    width: 100%

  &__name
    font-size: 32px
    color: #101820
    font-weight: 600
    line-height: 1.1
    letter-spacing: 0.16px
    text-decoration: none
    margin-bottom: 12px
    transition: color 0.3s

    @media (max-width: 767px)
      font-size: 24px

    @media (max-width: 479px)
      font-size: 18px

    &:hover
      color: #a39061

  &__text
    font-size: 20px
    color: #101820
    font-weight: 400
    line-height: 1.2
    letter-spacing: 0.16px
    margin-bottom: 18px

    @media (max-width: 767px)
      font-size: 16px

    span
      color: #fff
      background-color: #a39061
      padding: 0 5px

  &__date
    font-size: 12px
    color: #101820
    font-weight: 600
    line-height: 1
    letter-spacing: 1.6px
    text-transform: uppercase

  &__bottom
    margin-top: 70px

    @media (max-width: 767px)
      margin-top: 35px

  &__preloader
    display: flex
    justify-content: center
    align-items: center
    padding: 18px
    background-color: #FFFFFF

    i
      flex: 0 0 48px
      width: 48px
      max-width: 48px
      height: 48px
      animation: preloader 2s linear infinite

  @keyframes preloader
    from
      transform: rotate(0deg)

    to
      transform: rotate(360deg)