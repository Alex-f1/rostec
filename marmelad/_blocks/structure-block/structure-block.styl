.structure-block
  padding-top: 128px
  padding-bottom: 100px

  @media (max-width: 1279px)
    padding-top: 65px
    padding-bottom: 50px

  &--structure-page
    & ^[0]
      &__item
        width: 50%

        @media (max-width: 767px)
          width: 100%

    .structure-thumb
      min-height: 640px
      padding: 50px

      @media (max-width: 1023px)
        padding: 25px

      @media (max-width: 767px)
        min-height: 340px  

      &__text
        height: 100%
        min-height: 190px
        opacity: 1
        visibility: visible
        overflow: visible
        margin-bottom: 0

      &__img-wrapper
        order: 1
        margin-top: auto
        margin-bottom: auto

  &__items
    display: flex
    flex-wrap: wrap
    margin-left: -30px

  &__item
    width: 25%
    padding-left: 30px
    padding-bottom: 30px
    display: flex

    @media (max-width: 1023px)
      width: 50%

    @media (max-width: 767px)
      width: 100%