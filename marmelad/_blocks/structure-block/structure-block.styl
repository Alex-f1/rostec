.structure-block
  padding-top: 128px
  padding-bottom: 100px

  @media (max-width: 1279px)
    padding-top: 65px
    padding-bottom: 50px

  &__items
    display: flex
    flex-wrap: wrap
    margin-left: -30px

  &__item
    width: 25%
    padding-left: 30px
    padding-bottom: 30px
    display: flex

    @media (max-width: 1023px)
      width: 50%

    @media (max-width: 767px)
      width: 100%