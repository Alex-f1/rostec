.subscribe-news
  padding-top: 120px
  padding-bottom: 120px
  background-color: #FAFCFF

  @media (max-width: 767px)
    padding-top: 40px
    padding-bottom: 90px

  &__wrapper
    display: flex
    justify-content: space-between
    max-width: 1105px
    width: 100%
    margin-right: auto
    margin-left: auto

    @media (max-width: 767px)
      flex-direction: column

  &__head
    max-width: 310px
    margin-right: 25px

    @media (max-width: 767px)
      max-width: 100%
      margin-right: 0
      margin-bottom: 55px

  &__title
    font-size: 48px
    color: #101820
    font-weight: 600
    line-height: 1.2
    letter-spacing: 0.16px
    margin-bottom: 10px

    @media (max-width: 767px)
      font-weight: 700
      line-height: 0.9

    @media (max-width: 374px)
      font-size: 42px

  &__desc
    font-size: 20px
    color: #101820
    font-weight: 400
    line-height: 1.1
    letter-spacing: 0.16px

    @media (max-width: 767px)
      font-size: 16px

  &__form
    display: flex

    @media (max-width: 767px)
      width: 100%

  &__fields
    display: flex
    flex-direction: column
    width: 100%
    height: 100%
    justify-content: space-between

  &__field
    margin-bottom: 70px

    @media (max-width: 374px)
      margin-bottom: 50px

    &:last-child
      margin-bottom: 0

  &__choice-direction
    font-size: 20px
    color: #101820
    font-weight: 400
    line-height: 1.1
    letter-spacing: 0.16px
    display: flex
    align-items: center
    padding-bottom: 10px
    cursor: pointer
    border-bottom: 3px solid #101820

    @media (max-width: 374px)
      font-size: 16px

    span
      margin-right: 10px

    i
      flex: 0 0 29px
      width: 29px
      max-width: 29px
      height: 29px
      background-image: url("data:image/svg+xml,%3Csvg width='29' height='29' viewBox='0 0 29 29' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M5.13544 14.5H24.4688' stroke='%23101820' stroke-width='3'/%3E%3Cpath d='M14.8021 4.83325L14.8021 24.1666' stroke='%23101820' stroke-width='3'/%3E%3C/svg%3E%0A")
      background-repeat: no-repeat
      background-size: contain
      background-position: 0 0
      margin-left: auto

  &__input
    position: relative
    margin-bottom: 15px

    input
      font-size: 20px
      color: #101820
      font-weight: 400
      line-height: 1
      letter-spacing: 0.16px
      border: none
      padding-right: 30px
      background-color: transparent
      border-bottom: 3px solid #101820
      padding-bottom: 15px
      width: 100%
      height: 42px
      transition: color 0.3s
      outline: none !important

      @media (max-width: 374px)
        font-size: 16px

    ::placeholder
      font-size: 20px
      color: rgba(16, 24, 32, 0.3)
      font-weight: 400
      line-height: 1
      letter-spacing: 0.16px

      @media (max-width: 374px)
        font-size: 16px

  &__button-submit
    position: absolute
    top: 0
    right: 0
    width: 26px
    height: 26px
    border: none
    background-color: transparent
    background-image: url("data:image/svg+xml,%3Csvg width='26' height='26' viewBox='0 0 26 26' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cg opacity='0.3'%3E%3Cpath d='M23.668 13.7051L11.668 1.70508' stroke='%23101820' stroke-width='4'/%3E%3Cpath d='M11.668 24.3325L23.668 12.3325' stroke='%23101820' stroke-width='4'/%3E%3C/g%3E%3C/svg%3E%0A")
    background-repeat: no-repeat
    background-size: contain
    background-position: 0 0
    cursor: pointer

  &__note
    font-size: 16px
    color: #8F8F8C
    font-weight: 400
    line-height: 1.1
    letter-spacing: 0.16px
    display: block