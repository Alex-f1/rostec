.top-panel
  position: relative
  z-index: 15
  padding: 20px

  &__inner
    max-width: 1680px
    width: 100%
    display: flex
    align-items: center
    margin-left: auto
    margin-right: auto

    .main-menu
      margin-left: auto

  &__controls
    display: flex
    align-items: center
    width: 262px

    @media (max-width: 1279px)
      width: 172px

    @media (max-width: 1023px)
      margin-left: auto

    svg
      fill: transparent
      width: 100%
      height: 100%

      path, circle, ellipse
        transition: stroke 0.3s

  &__language
    flex: 0 0 32px
    width: 32px
    max-width: 32px
    height: 32px
    margin-right: 50px
    position: relative

    @media (max-width: 1279px)
      margin-right: 25px

    @media (max-width: 1023px)
      flex: 0 0 28px
      width: 28px
      max-width: 28px
      height: 28px
      margin-right: 35px

    &:after
      content: ''
      position: absolute
      top: -22px
      left: -22px
      width: 78px
      height: 78px
      background: linear-gradient(225.29deg, #101820 22.8%, #2C3642 99.5%)
      opacity: 0
      visibility: hidden
      transition: opacity 0.2s, ease 0.2s
      z-index 2

    &._is-active
      &:after
        opacity: 1
        visibility: visible

      & ^[0]
        &__language-selection
          opacity: 1
          visibility: visible
          transform: translateY(0)

  &__button-language
    width: 32px
    height: 32px
    display: flex
    border: none
    padding: 0
    background-color: transparent
    cursor: pointer
    position: relative
    z-index: 3

    &:hover
      svg
        path, circle, ellipse
          stroke: #a39061

  &__language-selection
    width: 214px
    background: linear-gradient(225.29deg, #101820 22.8%, #2C3642 99.5%)
    position: absolute
    top: 56px
    left: -22px
    z-index: 1
    opacity: 0
    visibility: hidden
    transform: translateY(-10px)
    transition: opacity 0.4s, transform 0.4s, ease 0.4s

    a
      font-size: 16px
      color: #A39061
      font-weight: 400
      line-height: 1.1
      letter-spacing: 0.16px
      text-decoration: none
      border-top: 1px solid rgba(255, 255, 255, 0.2)
      padding: 15px 25px
      display: flex
      align-items: center

      &:hover
        color: #8f8f8c

      &:after
        content: ''
        flex: 0 0 18px
        width: 18px
        max-width: 18px
        height: 12px
        margin-left: auto
        background-image: url("data:image/svg+xml,%3Csvg width='18' height='12' viewBox='0 0 18 12' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Cpath d='M1 4.46154L7.17323 10L17 1' stroke='white' stroke-width='2'/%3E%3C/svg%3E%0A")
        display: none

      &._is-active
        color: #fff
        pointer-events: none

        &:after
          display: block

  &__button-search
    flex: 0 0 32px
    width: 32px
    max-width: 32px
    height: 32px
    display: flex
    border: none
    padding: 0
    background-color: transparent
    margin-right: 50px
    cursor: pointer

    @media (max-width: 1279px)
      margin-right: 25px

    @media (max-width: 1023px)
      flex: 0 0 28px
      width: 28px
      max-width: 28px
      height: 28px
      margin-right: 35px

    &:hover
      svg
        path, circle
          stroke: #a39061

  &__button-burger
    flex: 0 0 36px
    width: 36px
    max-width: 36px
    height: 36px
    background-color: transparent
    border: none
    outline: none !important
    position: relative
    padding: 0
    cursor: pointer
    margin-left: auto
    position: relative
    z-index: 5

    @media (max-width: 1023px)
      flex: 0 0 28px
      width: 28px
      max-width: 28px

    &:hover
      &:before, &:after
        background-color: #a39061

    &:before, &:after
      content: ''
      position: absolute
      width: 36px
      height: 3px
      left: 50%
      transform: translateX(-50%)
      background-color: #fff
      transition: transform 0.3s, background 0.3s, ease 0.3s

      @media (max-width: 1023px)
        width: 28px

    &:before
      top: 12px

    &:after
      bottom: 12px

    &._is-active
      &:before
        top: 16px
        transform: translateX(-50%) rotate(-45deg)

      &:after
        bottom: 17px
        transform: translateX(-50%) rotate(45deg)