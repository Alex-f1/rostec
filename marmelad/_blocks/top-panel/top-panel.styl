.top-panel
  position: relative
  z-index: 5
  padding: 20px

  &__inner
    max-width: 1680px
    width: 100%
    display: flex
    align-items: center
    margin-left: auto
    margin-right: auto

    .main-menu
      margin-left: auto

  &__controls
    display: flex
    align-items: center
    width: 262px

    svg
      fill: transparent
      width: 100%
      height: 100%

      path, circle, ellipse
        transition: stroke 0.3s

  &__button-language
    flex: 0 0 32px
    width: 32px
    max-width: 32px
    height: 32px
    display: flex
    border: none
    padding: 0
    background-color: transparent
    margin-right: 50px
    cursor: pointer

    &:hover
      svg
        path, circle, ellipse
          stroke: #a39061

  &__button-search
    flex: 0 0 32px
    width: 32px
    max-width: 32px
    height: 32px
    display: flex
    border: none
    padding: 0
    background-color: transparent
    margin-right: 50px
    cursor: pointer

    &:hover
      svg
        path, circle
          stroke: #a39061

  &__button-burger
    flex: 0 0 36px
    width: 36px
    max-width: 36px
    height: 36px
    background-color: transparent
    border: none
    outline: none !important
    position: relative
    padding: 0
    cursor: pointer
    margin-left: auto

    &:hover
      &:before, &:after
        background-color: #a39061

    &:before, &:after
      content: ''
      position: absolute
      width: 36px
      height: 3px
      left: 50%
      transform: translateX(-50%)
      background-color: #fff
      transition: transform 0.3s, background 0.3s, ease 0.3s

    &:before
      top: 12px

    &:after
      bottom: 12px

    &._is-active
      &:before
        top: 16px
        transform: translateX(-50%) rotate(-45deg)

      &:after
        bottom: 17px
        transform: translateX(-50%) rotate(45deg)