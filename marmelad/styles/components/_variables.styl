$system-font = unquote(' "Proxima Nova", -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, "Noto Sans", sans-serif, "Apple Color Emoji", "Segoe UI Emoji", "Segoe UI Symbol", "Noto Color Emoji"')

$colors = {
  theme: #A39061,
  accent: #A39061,
}

$fonts = {
  base: $system-font,
  headings: $system-font
}

$body = {
  fontFamily: $fonts.base,
  fontSize: 1rem,
  fontWeight: 400,
  lineHeight: 1.5,
  color: #101820,
  bgc: #fff
}

$selection = {
  bgc: $colors.theme,
  color: #fff
}

$selectionHeadings = {
  bgc: $colors.accent,
  color: #101820
}

$placeholders = {
  normal : getColor($body.color, 'hint'),
  focus  : transparent
}
